{
  "name": "sHome Audio Listener",
  "version": "1.0.51",
  "slug": "shome_audio_listener", 
  "description": "Çamaşır melodisini tanıyan, nota eşleştiren ve MQTT ile HA'ya bildiren mikrofon dinleyici.",
  "startup": "application",
  "boot": "auto",
  "arch": ["amd64", "aarch64", "armv7"],
  "host_network": true,
  "audio": true,
  "devices": ["/dev/snd:/dev/snd:rwm"],
  "environment": {
    "PYAUDIO_IGNORE_ALSA_PLUGINS": "1"
  },
  "options": {
    "device_index": 2,
    "mic_gain": 1.5,
    "rms_threshold": 1000,
    "enable_note_detection": true,
    "note_sensitivity": 5.0,
    "mqtt_host": "localhost",
    "mqtt_port": 1883,
    "mqtt_user": "shome",
    "mqtt_pass": "a"
  },
  "schema": {
    "device_index": "int",
    "mic_gain": "float", 
    "rms_threshold": "int",
    "enable_note_detection": "bool",
    "note_sensitivity": "float",
    "mqtt_host": "str",
    "mqtt_port": "int",
    "mqtt_user": "str",
    "mqtt_pass": "str"
  }
}